<div class="container-fluid scroller mt-5" style="margin-left: 0%">
  <div class="row w-2">
    <div class="col-lg-6 mx-auto">
      <div class="auto-form-wrapper pb-5">
        <div class="mb-4">
      <div class="d-flex justify-content-center">
        <div class="mb-2" style="border-bottom: 3px solid #5782E4; width: max-content;">
          <h2 class="text-center">Demander un document</h2>
        </div>
      </div>
      <h5 class="text-center"><%= @case.user.business.name %> |  <%= @case.user.email %></h5>
    </div>
        <%= simple_form_for [@case, @notification] do |f| %>
            <%= label_tag :document, "Nom du document" %>
            <br>
            <div class="d-flex justify-content-between align-items-center">

                <%= text_field_tag :document, "", class: 'flex-grow-1' %>

              <%= f.submit 'Envoyer la demande', class: 'btn btn-style-blue ml-2' %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
