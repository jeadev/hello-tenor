<div id="documents-<%= category %>" class="card-body table-responsive">
  <table class="table table-borderless mb-0">
    <thead class="thead-light">
      <tr>
          <th>#</th>
          <th>Nom</th>
          <th>Cat√©gorie</th>
          <th>Date</th>
          <th class="action-center">Visualiser</th>
          <% if current_user.lawyer %>
            <th class="action-center">Supprimer</th>
          <% end %>
      </tr>
    </thead>
    <tbody>
      <% count = 1 %>
      <% documents.each do |doc| %>
        <tr>
          <td><%= count %></td>
          <td><%= doc.name %></td>
          <td><%= doc.category %></td>
          <td><%= doc.created_at.strftime("%d-%m-%Y")%></td>
          <td class="action-center"><a href="<%= doc.storage_url %>" target="_blank"><%= image_tag("download-icon.svg", width: "20") %></a></td>
          <td class="action-center"><%= link_to document_path(doc), remote: true, method: :delete, data: {confirm: "Etes vous sur de vouloir supprimer #{doc.name}?"} do%><i class="fas fa-trash"></i><%end%></td>
          <% count += 1 %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
